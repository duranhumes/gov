{
    "name": "government",
    "version": "1.0.0",
    "main": "build/index.js",
    "author": "duranhumes <duranhumes@gmail.com>",
    "license": "MIT",
    "scripts": {
        "test": "cross-env NODE_ENV=test npx mocha -r ts-node/register **/*.spec.ts --timeout 10000 --exit",
        "start": "cross-env NODE_ENV=development npx nodemon --exec npx ts-node src/application/index.ts",
        "build": "npx rimraf build && cross-env npx tsc",
        "prod": "cross-env yarn build && cross-env NODE_ENV=production npx pm2 start ecosystem.config.js --env production",
        "postinstall": "yarn prettier && yarn lint",
        "lint": "npx tslint --project tsconfig.json",
        "lint:fix": "npx tslint --project tsconfig.json --fix",
        "prettier": "npx prettier --write '**/*.{ts,js,json}'"
    },
    "dependencies": {
        "bunyan": "^2.0.2",
        "bunyan-express-serializer": "^1.0.0",
        "bunyan-rotating-file-stream": "^1.6.3",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "class-validator": "^0.9.1",
        "compression": "^1.7.3",
        "cors": "^2.8.5",
        "dotenv-safe": "^6.1.0",
        "escape-html": "^1.0.3",
        "express": "^4.16.4",
        "express-rate-limit": "^3.3.2",
        "express-validator": "^5.3.1",
        "helmet": "^3.15.0",
        "mocha": "^5.2.0",
        "morgan": "^1.9.1",
        "mysql2": "^1.6.4",
        "reflect-metadata": "^0.1.12",
        "supertest": "^3.3.0",
        "typeorm": "0.2.8",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@types/bunyan": "^1.8.5",
        "@types/chai": "^4.1.7",
        "@types/chai-as-promised": "^7.1.0",
        "@types/compression": "^0.0.36",
        "@types/cors": "^2.8.4",
        "@types/escape-html": "^0.0.20",
        "@types/expect": "^1.20.3",
        "@types/express": "^4.16.0",
        "@types/express-rate-limit": "^3.3.0",
        "@types/helmet": "^0.0.42",
        "@types/mocha": "^5.2.5",
        "@types/morgan": "^1.7.35",
        "@types/node": "^10.12.18",
        "@types/supertest": "^2.0.7",
        "@types/uuid": "^3.4.4",
        "cross-env": "^5.2.0",
        "nodemon": "^1.18.9",
        "pm2": "^3.2.7",
        "prettier": "^1.15.3",
        "ts-node": "7.0.1",
        "tslint": "^5.12.0",
        "tslint-config-airbnb": "^5.11.1",
        "tslint-config-prettier": "^1.17.0",
        "typescript": "3.2.2"
    }
}
